<%= form_with(model: dish, local: true) do |form| %>
  <% if dish.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(dish.errors.count, "error") %> prohibited this dish from being saved:</h2>

      <ul>
      <% dish.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!--<div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, id: :dish_user_id %>
  </div>-->

  <div class="field">
    <%= form.label :restaurant_id %>
    <%= form.collection_select :restaurant_id, Restaurant.all, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :dish_group %>
    <%= form.select :dish_group,  [['Entrees', 1], ['Soups & Salads', 2], ['Desserts', 3], ['Drinks', 4]] %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :dish_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :dish_description %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, id: :dish_price, step: :any %>
  </div>

  <div class="field">
    Foto: <%= form.file_field :photo %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
